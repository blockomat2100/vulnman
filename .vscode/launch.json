    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dev Server - Vulnman",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true
        },
        {
            "name": "Tests - Vulnman",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test"
            ],
            "django": true
        },
        {
            "name": "Celery",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/venv/bin/celery",
            "args": [
                "-A", "vulnman", "worker", "-l", "INFO"
            ]
        }
    ]
}